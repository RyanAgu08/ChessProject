<Window x:Class="ChessUI.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Register" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <TextBlock Text="Username:" Margin="50,70,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="UsernameTextBox" Width="200" Height="30" Margin="150,70,50,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <TextBlock Text="Password:" Margin="50,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <PasswordBox x:Name="PasswordBox" Width="200" Height="30" Margin="150,120,50,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button Content="Register" Width="100" Height="30" Margin="150,180,150,0" VerticalAlignment="Top" HorizontalAlignment="Center" Click="RegisterButton_Click"/>
    </Grid>
</Window>
