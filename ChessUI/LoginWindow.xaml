<Window x:Class="ChessUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Username:" Margin="50,50,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="UsernameTextBox" Width="200" Height="30" Margin="150,50,50,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <TextBlock Text="Password:" Margin="50,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <PasswordBox x:Name="PasswordBox" Width="200" Height="30" Margin="150,100,50,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button Content="Login" Width="100" Height="30" Margin="150,160,150,0" VerticalAlignment="Top" HorizontalAlignment="Center" Click="LoginButton_Click"/>

        <Button Content="Register" Width="100" Height="30" Margin="150,200,150,0" VerticalAlignment="Top" HorizontalAlignment="Center" Click="RegisterButton_Click"/>
    </Grid>
</Window>

